@model IEnumerable<StudentEducationSystem.Models.Question>
@{
    ViewBag.Title = "TakeTheExam";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    int i = 0;
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/Counter.css" rel="stylesheet" />
<script src="~/Scripts/counter.js"></script>



<div class="container">

    <div class="col-md-3 fixed" style="float:right;">
        <div class="card-counter info">
            <i class="fa fa-clock-o"></i>
            <span class="count-numbers" id="counter">60:00</span>
            <span class="count-name">Kalan Süre</span>
        </div>
    </div>
    <div class="col-md-10">
        <div class="row mt-5" style="        display: block;
        font-size: 1.5em
">
            @using (Html.BeginForm("TakeTheExam", "Exam", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                foreach (var question in Model)
                {
                    i += 1;
                    var data = question.Picture;
                    if (!String.IsNullOrEmpty(data))
                    {
                        if (question.Picture.Substring(0, 40).Contains(","))
                        {
                            data = question.Picture.Split(',')[1];
                        }
                    }
                    var imgSrc = String.Format("data:image/gif;base64,{0}", data);


                    <div class="card mx-1">
                        @if (imgSrc.Length > 22)
                        {
                            <img src="@imgSrc" class="card-img-top" alt="soru">
                        }
                        <div class="card-body">
                            <p class="card-title" style="text-align:center;">Soru : @i</p>
                            <p class="card-text"><b>@question.Title</b></p>
                        </div>
                        <div class="form-check">

                        </div>
                        <div class="form-check">

                        </div>
                        <div class="form-check">

                        </div>

                        <ul class="list-group list-group-flush">

                            <li class="list-group-item mx-2">
                                <label class="form-check-label" for="radio1">
                                    <input type="radio" class="form-check-input" value="@question.Answer" name="@question.Id">@question.Answer
                                </label>

                            </li>
                            <li class="list-group-item mx-2">
                                <label class="form-check-label" for="radio2">
                                    <input type="radio" class="form-check-input" value="@question.ChoiceOne" name="@question.Id">@question.ChoiceOne
                                </label>

                            </li>
                            <li class="list-group-item mx-2">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" value="@question.ChoiceTwo" name="@question.Id">@question.ChoiceTwo
                                </label>

                            </li>
                            <li class="list-group-item mx-2">
                                <label class="form-check-label" for="radio2">
                                    <input type="radio" class="form-check-input" value="@question.ChoiceThree" name="@question.Id">@question.ChoiceThree
                                </label>

                            </li>
                            <li class="list-group-item mx-2">
                                <label class="form-check-label" for="radio2">
                                    <input type="radio" class="form-check-input" value="@question.ChoiceFour" name="@question.Id">@question.ChoiceFour
                                </label>

                            </li>


                        </ul>

                    </div>
                    <br />
                }
                <button type="submit" id="btnFinishExam" class="btn btn-primary">Cevapla</button>
            }

        </div>
    </div>

</div>

